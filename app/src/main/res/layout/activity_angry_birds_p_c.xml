<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cheatsdev.cheatsbibleforgames.AngryBirdsPC"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Sound Board - Get 3 stars in every level worlds 1-3"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 1 - Get 3 stars in every level worlds 4-5"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 2 - In the level select screen, tap the sun
"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 3 - Watch the credits, tap the Golden Egg at the very end"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 4 - Within any level, go to the help screen. Tap the egg at the end"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 5 - In Level 1-8, tap the unreachable chest"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 6 - In Level 2-2, break the beach ball"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 7 - In Level 4-7,tap the egg at the very top right of the map (zoom out)"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 8 - In Level 5-19, it's hiding on the top right of the left tower"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg Level 9 - In Level 6-14, pop the yellow balloon"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg 10 - In level 6-14 bust the yellow balloon in the lower right corner"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg 11 - In theme 8's level page, brush the screen right to left to reveal a golden egg"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg 12 - Get 3 stars for every level in Danger Above"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg 13 - In level 8-15 break the boxes in the far left corner"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg 14 - In level 9-14 fire the boomerang bird at the hat on the far right side of the screen on the small cliff."
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg 15 - Bust the rubber duck in the bottom left side In 10-3"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:text="Golden Egg 16 - Get three stars on all levels in the Big Setup"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
